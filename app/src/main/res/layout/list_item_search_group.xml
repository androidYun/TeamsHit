<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingRight="11dp">

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="9dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="21dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/default_head" />

    <TextView
        android:id="@+id/txt_group_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_head"
        android:layout_toRightOf="@+id/img_head"
        android:text="对对碰一群"
        android:textColor="@color/alway_text_black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_group_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_group_name"
        android:layout_below="@+id/txt_group_name"
        android:layout_marginTop="7dp"
        android:background="@color/btn_confirm_color"
        android:drawableLeft="@drawable/small_head"
        android:drawablePadding="4dp"
        android:minWidth="38dp"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="2dp"
        android:paddingTop="2dp"
        android:text="1"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/txt_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_group_people"
        android:gravity="center_vertical"
        android:layout_below="@+id/txt_group_people"
        android:layout_marginTop="5dp"
        android:lines="2"
        android:text="欢迎对对碰玩家一起交流" />
</RelativeLayout>