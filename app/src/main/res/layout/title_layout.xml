<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navi_title"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_navi"
    android:background="@color/white"
    tools:context=".Activity.MainActivity">

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/img_back" />

    <TextView
        android:id="@+id/txt_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_navi"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/normal_margin"
        android:layout_toEndOf="@+id/img_back"
        android:layout_toRightOf="@+id/img_back"
        android:gravity="center"
        android:text="提示" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="title"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txt_finish"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/normal_margin"
        android:drawableLeft="@drawable/title_right_icon"
        android:drawablePadding="15dp"
        android:gravity="center"
        android:text="完成"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_finish"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/normal_margin"
        android:drawableLeft="@drawable/title_right_icon"
        android:gravity="center"
        android:src="@drawable/selector_single_chat_set"
        android:visibility="gone" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/divider" />


</RelativeLayout>