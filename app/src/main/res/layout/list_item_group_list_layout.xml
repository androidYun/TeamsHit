<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="11dp">

    <TextView
        android:id="@+id/catalog"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="#f0f0f6"
        android:paddingBottom="5dip"
        android:paddingLeft="12dip"
        android:paddingTop="5dip"
        android:text="21点群"
        android:textColor="#999999" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <teams.xianlin.com.teamshit.widget.SelectableRoundedImageView
            android:id="@+id/img_head"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/default_head"
            app:sriv_left_bottom_corner_radius="3dip"
            app:sriv_left_top_corner_radius="3dip"
            app:sriv_right_bottom_corner_radius="3dip"
            app:sriv_right_top_corner_radius="3dip" />

        <TextView
            android:id="@+id/txt_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img_head"
            android:layout_toRightOf="@+id/img_head"
            android:text="对对碰一群"
            android:textColor="@color/alway_text_black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_group_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_group_name"
            android:layout_below="@+id/txt_group_name"
            android:layout_marginTop="7dp"
            android:background="@color/btn_confirm_color"
            android:drawableLeft="@drawable/small_head"
            android:drawablePadding="4dp"
            android:minWidth="38dp"
            android:paddingLeft="6dp"
            android:paddingRight="2dp"
            android:paddingTop="2dp"
            android:text="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_group_people"
            android:layout_below="@+id/txt_group_people"
            android:layout_marginTop="2dp"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="欢迎对对碰玩家一起交流" />
    </RelativeLayout>
</LinearLayout>