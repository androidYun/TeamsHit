<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/sixten">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <TextView
                android:id="@+id/txt_txtsize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="你还可以输入140个文字"
                android:textColor="@color/alway_text_black"
                android:textSize="@dimen/sixten" />

        </RelativeLayout>

        <EditText
            android:id="@+id/edit_content"
            android:padding="8dp"
            android:gravity="top"
            android:hint="请输入你要输入的内容..."
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:background="@color/bg" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp">

            <TextView
                android:id="@+id/txt_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="生成"
                android:textColor="@color/selector_bg_color"
                android:textSize="@dimen/sixten" />

            <TextView
                android:id="@+id/txt_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:layout_toLeftOf="@+id/txt_confirm"
                android:layout_toStartOf="@+id/txt_confirm"
                android:text="取消"
                android:textSize="@dimen/sixten" />


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>