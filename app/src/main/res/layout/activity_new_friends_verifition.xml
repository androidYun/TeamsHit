<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <teams.xianlin.com.teamshit.widget.TitleNavi
        android:id="@+id/navi_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="8dp">

        <ImageView

            android:id="@+id/img_head"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/icon_head" />

        <TextView
            android:id="@+id/txt_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/img_head"
            android:layout_toRightOf="@+id/img_head"
            android:paddingLeft="15dp"
            android:paddingTop="6dp"
            android:text="李桂云"
            android:textColor="@color/alway_text_black"
            android:textSize="@dimen/sixten" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_friend_name"
            android:layout_toRightOf="@+id/img_head"
            android:paddingLeft="15dp"
            android:text="碰碰号:13625"
            android:textColor="@color/alway_text_gray" />


    </RelativeLayout>

    <TextView
        android:id="@+id/txt_verifition_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:paddingBottom="@dimen/sixten"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="@dimen/sixten"
        android:text="李桂云：我是博哥 帅帅的博哥"
        android:textColor="@color/alway_text_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:orientation="horizontal"
        android:padding="14dp">

        <Button
            android:id="@+id/btn_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/btn_cancel"
            android:paddingBottom="17dp"
            android:paddingTop="17dp"
            android:text="拒绝"
            android:textSize="17dp" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/btn_confirm"
            android:paddingBottom="17dp"
            android:paddingTop="17dp"
            android:text="同意"
            android:textColor="@color/white"
            android:textSize="17dp" />

    </LinearLayout>


</LinearLayout>