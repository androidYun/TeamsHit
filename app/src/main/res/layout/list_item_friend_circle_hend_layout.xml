<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_head_bg" />

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/icon_head" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_bg"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/img_head"
        android:layout_toStartOf="@+id/img_head"
        android:text="自己"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_head"
        android:layout_centerHorizontal="true"
        android:background="@color/message_bg"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="8dp"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/img_message_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_head" />

        <TextView
            android:id="@+id/txt_number_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>