<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:paddingLeft="27dp"
    android:paddingTop="15dp">

    <ImageView
        android:id="@+id/img_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/qr_code_cancle"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@+id/img_selector"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_ssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="wlive"
            android:textColor="@color/alway_text_black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_bssid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80:89:17:69:9a:fc"
            android:textColor="@color/alway_text_gray"
            android:textSize="12dp" />
        android:layout_height="match_parent">
    </LinearLayout>

</RelativeLayout>