<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_boast_content_bg"
    android:orientation="vertical"
    android:paddingLeft="43dp"
    android:paddingRight="43dp"
    android:paddingTop="14dp">



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_prepare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:divider="#00000000"
        android:dividerHeight="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_prepare"
        android:paddingBottom="20dp"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/img_prepare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:layout_toLeftOf="@+id/img_back"
            android:layout_toStartOf="@+id/img_back"
            android:src="@drawable/icon_prepare" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="109dp"
            android:layout_marginRight="109dp"
            android:src="@drawable/icon_game_back" />
    </RelativeLayout>

</RelativeLayout>