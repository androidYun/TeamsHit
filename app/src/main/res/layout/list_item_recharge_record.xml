<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:id="@+id/txt_recharge_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:text="购物充值"
        android:textColor="@color/alway_text_black" />

    <TextView
        android:id="@+id/txt_recharge_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_recharge_type"
        android:layout_below="@+id/txt_recharge_type"
        android:layout_marginTop="5dp"
        android:text="2016-7-19"
        android:textColor="@color/alway_text_gray" />

    <TextView
        android:id="@+id/txt_team_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="+109个"
        android:textColor="@color/txt_selector_color"
        android:textSize="17dp" />
</RelativeLayout>